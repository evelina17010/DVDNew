<Page x:Class="DVD.Pages.PageImage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageImage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resourse/we.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="createQrBtn" Content="Создать QR" Width="150" Height="50" Click="Button_Click" Margin="75 40 0 30"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="ImageQr" Height="200" Width="200"  Margin="50" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Button x:Name="createBtn" Width="150" FontSize="30" FontWeight="Black" Height="50"  Click="Button2_Click" Margin="75 0 0 30"  Foreground="#952325" >
                <Border CornerRadius="10" Background="Pink" >
                    <TextBlock Text=" DVD" Width="141" />
                </Border>
            </Button>
        </StackPanel>
    </Grid>
</Page>
