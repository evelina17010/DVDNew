<Page x:Class="DVD.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutorizationPage" Background="#fabbb8" >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Zaya DVD Shop" FontSize="40" FontFamily="Impact" Grid.Column="1" Grid.ColumnSpan="3" Margin="10" Foreground="#952325" TextAlignment="Center"  />
        <TextBlock Text="Авторизация" FontSize="30" FontFamily="Impact" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Margin="10" Foreground="LightCyan" TextAlignment="Center"  />
        <TextBlock Text="Логин:" FontSize="30" Grid.Column="1" FontFamily="Impact"  Grid.Row="2" Margin="10 20 0 0" Foreground="LightCyan" TextAlignment="Center"  />
        <TextBlock Text="Пароль:" FontSize="30" Grid.Column="1" FontFamily="Impact" Grid.Row="3" Margin="10 20 0 0 " Foreground="LightCyan" TextAlignment="Center"  />
        <TextBox x:Name="Logintxb" FontSize="40" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="2"  TextAlignment="Center" Height="45"  />
        <PasswordBox x:Name="Parolpsw" FontSize="40" Grid.Column="2" Grid.ColumnSpan="2" Margin="10,10,10,10" Grid.Row="3"  Height="45"  />
        <Button x:Name="Regesrtbtn" Content="Войти" FontSize="20" FontFamily="Impact" Grid.Column="2" Grid.ColumnSpan="2"  Margin="10,10,10,10" Grid.Row="4"  Height="40" Width="200" Click="Regesrtbtn_Click" Background="LightGray"  />
        <Image Source="/Resourse/b.ico" Width="200" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="98,38,22,37" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="-44.204"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock x:Name="Reg"  Text="Зарегистрироваться" FontSize="20" FontFamily="Impact" Grid.Column="2"  Margin="10,10,10,10" Grid.Row="5" Grid.ColumnSpan="2" Height="50" Width="200" Padding="10"  MouseDown="Reg_MouseDown" TextAlignment="Center" MouseEnter="Reg_MouseEnter" MouseLeave="Reg_MouseLeave"/>
        <Image Source="/Resourse/b.ico" Width="200" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="3" Grid.RowSpan="3" Margin="18,47,102,28"/>
        <Image Source="/Resourse/b.ico" Width="200" Grid.ColumnSpan="2" Grid.Column="3" Grid.Row="0" Grid.RowSpan="3" Margin="65,38,55,37" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Image Source="/Resourse/b.ico" Grid.RowSpan="3" Grid.Column="3" Grid.Row="2" Margin="112,66,43,-20" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="294.677"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>


    </Grid>
</Page>
