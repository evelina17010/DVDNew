<Page x:Class="DVD.Pages.CapchaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DVD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CapchaPage" Background="LightBlue">

    <Grid>
        <Grid Width="500" Height="150">
            <StackPanel x:Name="SpCapch" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <Canvas x:Name="cv"/>
        </Grid>
        <StackPanel>
            <Button x:Name="UpdCapch" Content="Обновить" Click="UpdCapch_Click" Width="300" Margin="10" FontSize="20" Height="40" FontFamily="Impact"/>
            <TextBox x:Name="tbCapch" Width="300" Height="45" FontSize="20"  FontFamily="Impact"/>
            <Button x:Name="CheckCapch" Content="Проверить" Click="CheckCapch_Click" Width="300" Margin="10" FontSize="20" Height="40" FontFamily="Impact"/>
        </StackPanel>
    </Grid>
</Page>
